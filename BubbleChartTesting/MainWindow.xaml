<Window x:Class="BubbleChartTesting.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
		xmlns:local="clr-namespace:BubbleChartTesting"
		xmlns:controls="clr-namespace:ReliaCoat.Common.UI.Controls;assembly=ReliaCoat.Common.UI.Controls"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
		Background="Black"
		Title="MainWindow"
		Height="1000"
		Width="1400">

	<DockPanel>

		<controls:RctButton Content="Populate Data"
							Margin="10"
							Command="{Binding populateDataCommand}"
							DockPanel.Dock="Top" />

		<controls:RctButton Content="Next Point"
		                    Margin="10"
		                    Command="{Binding nextPointCommand}"
							IsEnabled="{Binding isNextPointEnabled}"
		                    DockPanel.Dock="Top" />

		<s:SciChartSurface Margin="10"
						   x:Name="sciChartSurface"
						   XAxis="{Binding xAxis}"
						   YAxis="{Binding yAxis}"
						   RenderableSeries="{s:SeriesBinding renderableSeriesList}"/>

	</DockPanel>

</Window>
