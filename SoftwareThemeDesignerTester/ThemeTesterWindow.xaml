<Window x:Class="SoftwareThemeDesignerTester.ThemeTesterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SoftwareThemeDesignerTester.ViewModels"
        xmlns:controls="clr-namespace:ReliaCoat.Common.UI.Controls;assembly=ReliaCoat.Common.UI.Controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:ThemeTesterWindowViewModel}"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Background}"
        Height="700"
        Width="1400">

    <StackPanel>

        <controls:RctSpinBox value="{Binding myValue, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                             prefix="My"
                             suffix="Unit"
                             stringFormat="F2"
                             Margin="10" />

        <controls:RctSpinBox value="{Binding myValue, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                             prefix="My"
                             suffix="Unit"
                             stringFormat="F2"
                             Margin="10" />

    </StackPanel>

</Window>